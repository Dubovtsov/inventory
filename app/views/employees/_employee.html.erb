<div id="<%= dom_id employee %>">
  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    <th scope="row" class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
      <div class="w-10 h-10 rounded-full bg-amber-500 flex items-center justify-center">
        <div class="text-amber-900 uppercase"><%= employee.last_name[0] + employee.first_name[0] %></div>
      </div>
      <%= link_to employee do %>
        <div class="ps-3">
          <div class="text-base font-semibold"><%= employee.last_name %></div>
          <div class="font-normal text-gray-500"><%= employee.first_name %> <%= employee.middle_name %></div>
        </div>
      <% end %>
    </th>
  
    <td class="px-6 py-4">
        React Developer
    </td>

    <td class="px-6 py-4">
      <%= link_to "Edit", edit_employee_path(employee), class: "font-medium text-amber-500 dark:text-amber-500 hover:underline" %>
    </td>
  </tr>
  
  <!-- <% if action_name != "show" %>
    <%= link_to "Show this employee", employee, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this employee", edit_employee_path(employee), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %> -->
</div>
