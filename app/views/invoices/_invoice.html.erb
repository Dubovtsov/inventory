<div id="<%= dom_id invoice %>" data-turbo="false">
  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
    <td class="px-4 py-1 font-medium text-gray-900 dark:text-white max-w-[500px]">
      <%= link_to invoice.id, invoice, class: "rounded-lg py-1 px-4 bg-gray-100 inline-block font-medium" %>
    </td>
    <td class="px-4 py-1 border-x border-gray-200 border-dotted">
        <span class="<%= invoice.user == @current_user ? "bg-green-300  border border-green-400 px-2 py-1 rounded text-green-800 font-medium" : "" %>"><%= invoice.user.email %></span>
    </td>
    <td class="px-4 py-1 border-x border-gray-200 border-dotted">
        <%= invoice.client.title %>
    </td>
    <td class="px-4 py-1 border-x border-gray-200 border-dotted">
        <%= invoice.storehouse.title %>
    </td>
    <td class="px-4 py-1 text-right">
      <%= link_to "Edit", edit_invoice_path(invoice), class: "font-medium text-amber-500 hover:text-amber-700 hover:underline" %>
    </td>
  </tr>
</div>
