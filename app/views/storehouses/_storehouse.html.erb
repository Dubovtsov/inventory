<div id="<%= dom_id storehouse %>" class="">
  <%= link_to storehouse, class:"flex items-center bg-zinc-100 transition h-full rounded-3xl flex-row hover:shadow-lg" do %>
    <div class="flex items-center bg-zinc-200 h-full rounded-l-3xl px-4">
      <% if storehouse.image.attached? %>
        <%= image_tag storehouse.image, class: "mx-auto object-cover rounded-full max-h-[80px] md:max-w-[80px] " %>
      <% else %>
        <div class="mx-auto rounded-full min-h-[80px] md:min-w-[80px] max-h-[80px] md:max-w-[80px] bg-white flex items-center justify-center">
          <div class="text-zinc-700 font-bold uppercase"><%= storehouse.title[0] + storehouse.title[1] %></div>
        </div>
      <% end %>
    </div>
    

    <div class="flex flex-col w-full justify-between p-6 leading-normal">
        <h5 class="text text-wrap font-bold tracking-tight text-zinc-800"><%= storehouse.title %></h5>
        <p class="mb-4 text-sm font-normal text-zinc-500"><%= storehouse.description %></p>
        <p class="text-end text-xs text-green-500">Позиций на складе: <%= storehouse.products.balance_sheet.count %></p>
    </div>
  <% end %>
</div>
