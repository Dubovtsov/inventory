<div id="<%= dom_id storehouse %>" class="">
  <%= link_to storehouse, class:"flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-amber-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700" do %>
    <% if storehouse.image.attached? %>
      <%= image_tag storehouse.image, class: "object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" %>
    <% else %>
      <div class="ml-4 w-20 h-20 rounded-full bg-amber-500 flex items-center justify-center">
        <div class="text-amber-900 uppercase"><%= storehouse.title[0] + storehouse.title[1] %></div>
      </div>
    <% end %>

    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%= storehouse.title %></h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400"><%= storehouse.description %></p>
        <p class="mb-3 text-xs text-gray-500 dark:text-gray-400">Позиций на складе: <%= storehouse.products.count %></p>
    </div>
  <% end %>
</div>
