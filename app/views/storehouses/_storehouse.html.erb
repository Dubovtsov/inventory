<div id="<%= dom_id storehouse %>" class="">
  <%= link_to storehouse, class:"flex items-center bg-zinc-100 transition rounded-3xl flex-row hover:shadow-lg" do %>
    <% if storehouse.image.attached? %>
      <%= image_tag storehouse.image, class: "ml-4 object-cover rounded-full h-[80px] md:w-[80px] " %>
    <% else %>
      <div class="mx-4 md:w-1/3 sm:w-1/4 sm:h-[6rem] md:h-[6rem] rounded-full bg-white flex items-center justify-center">
        <div class="text-zinc-700 font-bold uppercase"><%= storehouse.title[0] + storehouse.title[1] %></div>
      </div>
    <% end %>

    <div class="flex flex-col border-l w-full border-l-zinc-200 justify-between p-6 leading-normal">
        <h5 class="text text-wrap font-bold tracking-tight text-zinc-800"><%= storehouse.title %></h5>
        <p class="mb-4 text-sm font-normal text-zinc-500"><%= storehouse.description %></p>
        <p class="text-end text-xs text-green-500">Позиций на складе: <%= storehouse.products.balance_sheet.count %></p>
    </div>
  <% end %>
</div>
