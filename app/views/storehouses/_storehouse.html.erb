<div id="<%= dom_id storehouse %>" class="">
  <%= link_to storehouse, class:"flex items-center bg-slate-200 border border-slate-300 transition rounded-3xl flex-row hover:bg-slate-300 hover:border-slate-300" do %>
    <% if storehouse.image.attached? %>
      <%= image_tag storehouse.image, class: "ml-4 object-cover rounded-full h-[80px] md:w-[80px] " %>
    <% else %>
      <div class="ml-4 md:w-[80px] md:h-[80px] rounded-full border border-slate-300 bg-slate-50 flex items-center justify-center">
        <div class="text-sky-900 font-bold uppercase"><%= storehouse.title[0] + storehouse.title[1] %></div>
      </div>
    <% end %>

    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text text-wrap font-bold tracking-tight text-slate-900"><%= storehouse.title %></h5>
        <p class="mb-3 font-normal text-slate-700"><%= storehouse.description %></p>
        <p class="mb-3 text-xs text-slate-700">Позиций на складе: <%= storehouse.products.balance_sheet.count %></p>
    </div>
  <% end %>
</div>
