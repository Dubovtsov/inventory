<div id="<%= dom_id storehouse %>" class="">
  <%= link_to storehouse, class:"flex flex-col items-center bg-slate-200 border border-slate-300 transition rounded-3xl md:flex-row md:max-w-xl hover:bg-slate-300 hover:border-slate-300 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700" do %>
    <% if storehouse.image.attached? %>
      <%= image_tag storehouse.image, class: "object-cover w-full rounded-s-3xl h-96 md:h-auto md:w-48 " %>
    <% else %>
      <div class="ml-4 w-20 h-20 rounded-full border border-slate-300 bg-slate-50 flex items-center justify-center">
        <div class="text-sky-900 font-bold uppercase"><%= storehouse.title[0] + storehouse.title[1] %></div>
      </div>
    <% end %>

    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-slate-900"><%= storehouse.title %></h5>
        <p class="mb-3 font-normal text-slate-700"><%= storehouse.description %></p>
        <p class="mb-3 text-xs text-slate-700">Позиций на складе: <%= storehouse.products.count %></p>
    </div>
  <% end %>
</div>
