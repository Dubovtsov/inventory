<table id="suppliers" class="w-full text-sm text-left rtl:text-right text-zinc-500 dark:text-gray-400 border-separate border-spacing-y-2">
  <thead class="text-xs text-zinc-600 uppercase bg-gradient-to-b from-zinc-50 to-zinc-100 sticky top-0 ">
    <tr>
      <th scope="col" class="px-6 py-3">
        Краткое наименование
      </th>
      <th scope="col" class="px-6 py-3">
        Полное наименование
      </th>
      <th scope="col" class="px-6 py-3">
        Менеджер
      </th>
      <th scope="col" class="px-6 py-3">
        Email
      </th>
      <th scope="col" class="px-6 py-3">
      </th>
    </tr>
  </thead>
  <tbody>
    <% suppliers.each do |supplier| %>
      <tr class="bg-zinc-50 transition shadow hover:shadow-md hover:bg-zinc-100 border-separate border-spacing-y-2">
        <td class="px-6 py-4 w-1/3">
          <%= link_to supplier.name, supplier, class: "" %>
        </td>
        <td class="px-6 py-4">
          <%= supplier.fullname %>
        </td>
        <td class="px-6 py-4">
          <%= supplier.manager %>
        </td>
        <td class="px-6 py-4">
          <%= supplier.email %>
        </td>
        <td class="px-6 py-4">
          <%= link_to "Edit", edit_supplier_path(supplier), data: { turbo_frame: 'modal' }, class: "font-medium text-amber-500 hover:text-amber-700 hover:underline" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>