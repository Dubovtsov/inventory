<div id="<%= dom_id supplier %>">
  <tr class="bg-zinc-50 transition shadow hover:shadow-md hover:bg-zinc-100 border-separate border-spacing-y-2">
    <td class="px-6 py-4 w-1/3">
      <%= link_to supplier.name, supplier, class: "" %>
    </td>
    <td class="px-6 py-4">
      <%= supplier.fullname %>
    </td>
    <td class="px-6 py-4">
      <%= supplier.manager %>
    </td>
    <td class="px-6 py-4">
      <%= supplier.email %>
    </td>
    <td class="px-6 py-4">
      <%= link_to "Edit", edit_supplier_path(supplier), class: "font-medium text-amber-500 hover:text-amber-700 hover:underline" %>
    </td>
  </tr>
</div>
