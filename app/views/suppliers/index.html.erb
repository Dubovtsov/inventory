<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-gray-700 text-2xl mr-3">Поставщики</h1>
    <%= link_to "New supplier", new_supplier_path, data: { turbo_frame: 'modal' },class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div class="min-w-full max-h-[65vh] overflow-y-auto">
    <%= render partial: "suppliers", locals: { suppliers: @suppliers } %>
  </div>
</div>
