<div id="<%= dom_id client %>" class="bg-stone-100 px-6 py-6 rounded-[30px]">
  <p class="">
    <%= link_to client.title, client, class: "rounded-lg py-3 px-5 inline-block font-medium" %>
  </p>
  <hr class="mb-6 border border-stone-200">
  <% if action_name != "show" %>
    <%= link_to "Edit this client", edit_client_path(client), class: "rounded-[15px] py-3 ml-2 px-5 hover:bg-stone-200 border border-stone-300 text-stone-800 inline-block font-medium" %>
    
  <% end %>
</div>
