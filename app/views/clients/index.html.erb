<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-start items-center mb-4">
    <h1 class="font-bold text-gray-700 text-2xl mr-3">Клиенты | </h1>
    <%= link_to "Добавить", new_client_path, class: "px-4 py-2 transition rounded-xl text-amber-600 hover:text-slate-900 hover:bg-amber-400 border border-amber-400 font-medium text-sm cursor-pointer" %>
  </div>

  <div id="clients" class="min-w-full flex gap-3">
    <%= render @clients %>
  </div>
</div>
